<div class="modal hide fade" id="modal-info">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Guthaben setzen</h3>
  </div>
  <div class="modal-body">
  
	<form class="form-horizontal">
        
        <div class="control-group">
            <label class="control-label" for="amount">Guthaben</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-cog"></i></span>
                    <input type="text" id="amount" value="<%= amount %>">
                </div>
            </div>
        </div>
        
	</form>
    
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-primary" data-id="<%= id %>" id="modal-submit"><i class="icon-ok icon-white"></i> Speichern</a>
    <a href="#" class="btn pull-left" data-dismiss="modal"><i class="icon-remove"></i> Abbrechen</a>
  </div>
</div>