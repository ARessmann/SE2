<div class="modal hide fade" id="modal-info">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Kunde</h3>
  </div>
  <div class="modal-body">
  
	<form class="form-horizontal">
        <div class="control-group">
            <label class="control-label" for="auth_identity">Benutzername</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-cog"></i></span>
                    <input type="text" id="auth_identity" value="<%= identity %>">
                </div>
            </div>
        </div>
        
        <div class="control-group">
            <label class="control-label" for="auth_user_firstname">Vorname</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-cog"></i></span>
                    <input type="text" id="auth_user_firstname" value="<%= firstname %>">
                </div>
            </div>
        </div>
        
        <div class="control-group">
            <label class="control-label" for="auth_user_lastname">Nachname</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-cog"></i></span>
                    <input type="text" id="auth_user_lastname" value="<%= lastname %>">
                </div>
            </div>
        </div>
        
        <div class="control-group">
            <label class="control-label" for="auth_user_telnr">TelNr</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-cog"></i></span>
                    <input type="text" id="auth_user_telnr" value="<%= telnr %>">
                </div>
            </div>
        </div>
        
        <div class="control-group">
            <label class="control-label" for="adress_field">Adresse</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-cog"></i></span>
                    <textarea id="adress_field"><%= address %></textarea>
                </div>
            </div>
        </div>
	</form>
    
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-primary" data-id="<%= id %>" id="modal-submit"><i class="icon-ok icon-white"></i> Speichern</a>
    <a href="#" class="btn pull-left" data-dismiss="modal"><i class="icon-remove"></i> Abbrechen</a>
  </div>
</div>